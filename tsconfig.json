{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2020", "DOM"],                  // DOM for browser (Playwright), ES for Node
    "strict": true,
    "esModuleInterop": true,                   // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",                          // Compiled output dir
    "rootDir": "src",                          // Source dir
    "types": ["node"]       // Add Playwright types
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}